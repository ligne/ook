#!/bin/sh

kindle_dir=/media/mlb/Kindle
[ -d "$kindle_dir" ] || {
  echo Kindle not mounted.
  exit 1
}

cd ~/ebooks/

# clean up cruft
./clean.py
echo

# copy any new files over
# FIXME nothing to do here yet

# take a backup
rsync -ha --delete $kindle_dir/ /home/local/mlb/.kindle/ --exclude-from ~/.kindle-excludes

# recalculate wordcounts
./wordcounts.py

# regenerate the graphs and update the total ebook wordcount
./reading.py

tmpdir=`mktemp -d`

OPTS="--width 50 --size 15"

# update suggestions
(
  echo Scheduled
  echo
  ./suggestions.py --scheduled
  echo ----
  echo All novels
  echo
  ./suggestions.py $OPTS --categories books
  echo ----
  echo All short stories
  echo
  ./suggestions.py $OPTS --categories short-stories
  echo ----
  echo French books
  echo
  ./suggestions.py $OPTS --languages fr
  echo ----
  echo Non-fiction
  echo
  ./suggestions.py $OPTS --categories non-fiction
) > $tmpdir/00\ Suggestions.txt

OPTS="--width 50 --shelves kindle"

# add alphabetically and numerically sorted versions of all wordcount lists.
(
  echo Articles
  echo
  ./suggestions.py $OPTS --categories articles --words
  echo ----
  echo Novels
  echo
  ./suggestions.py $OPTS --categories novels
  echo ----
  echo Short stories
  echo
  ./suggestions.py $OPTS --categories short-stories
  echo ----
  echo French books
  echo
  ./suggestions.py $OPTS --language fr
  echo ----
  echo Non-fiction
  echo
  ./suggestions.py $OPTS --categories non-fiction
) > $tmpdir/00\ Numeric.txt
(
  echo Articles
  echo
  ./suggestions.py $OPTS --alpha --categories articles --words
  echo ----
  echo Novels
  echo
  ./suggestions.py $OPTS --alpha --categories novels
  echo ----
  echo Short stories
  echo
  ./suggestions.py $OPTS --alpha --categories short-stories
  echo ----
  echo French books
  echo
  ./suggestions.py $OPTS --alpha --language fr
  echo ----
  echo Non-fiction
  echo
  ./suggestions.py $OPTS --alpha --categories non-fiction
) > $tmpdir/00\ Alphabetical.txt

diff -uwr $kindle_dir/documents/wordcounts/00\ Suggestions.txt $tmpdir/
rsync -ha --delete $tmpdir/ $kindle_dir/documents/wordcounts/

